% --- Configuración de Encabezado y Pie de Página (ANCHO COMPLETO) ---
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}

\fancyfoot[R]{\color{white}\thepage} % Número de página en la esquina inferior derecha

% --- Contenido del encabezado con TikZ para ancho total ---
\fancyhead[C]{%
  \begin{tikzpicture}[remember picture, overlay]
    % El nodo se ancla en el borde superior de la página (current page.north)
    \node[anchor=north, inner sep=0] at (current page.north) {
      \includegraphics[width=\paperwidth]{header_utp_mm.png}
    };
  \end{tikzpicture}%
}

% --- Contenido del pie de página con TikZ para ancho total ---
\fancyfoot[C]{%
  \begin{tikzpicture}[remember picture, overlay]
    % El nodo se ancla en el borde inferior de la página (current page.south)
    \node[anchor=south, inner sep=0] at (current page.south) {
      \includegraphics[width=\paperwidth]{footer_utp_mm.png}
    };
  \end{tikzpicture}%
}

% --- Comandos Personalizados para Facilidad de Uso ---

% 1. Comando para el título principal de la práctica con línea inferior
\newcommand{\practicatitle}[1]{
    \begin{center}
        {\Large\bfseries\color{UTPGreenDark} #1} % Título
        \vspace{1mm} % Pequeño espacio
        \color{UTPGreenDark}\rule{\textwidth}{0.6pt} % Línea horizontal
    \end{center}
    \vspace{8mm} % Espacio después del título
}

% 2. Comando para resaltar texto como en la imagen
% Uso: \hl{texto a resaltar}
\newcommand{\hl}[1]{{\color{UTPHighlightGreen}\bfseries #1}}